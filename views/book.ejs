<div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
    <div>
        <h4 class="text-muted mb-0">كتاب:</h4>
        <h2 class="fw-bold text-primary d-inline-block"><%= book.name %></h2>
        <% if (isAdmin) { %>
            <button class="btn btn-sm btn-outline-secondary ms-2" data-bs-toggle="modal" data-bs-target="#editBookModal"><i class="fas fa-edit"></i></button>
        <% } %>
        <span class="badge bg-secondary d-block mt-1 w-auto"><%= book.branch.name %></span>
    </div>
    <a href="/branch/<%= book.branch._id %>" class="btn btn-secondary"><i class="fas fa-arrow-right"></i> رجوع للفرع</a>
</div>

<% if (isAdmin) { %>
    <button class="btn btn-primary mb-4 shadow" data-bs-toggle="modal" data-bs-target="#addSectionModal"><i class="fas fa-folder-plus"></i> إنشاء قسم/وحدة</button>
    
    <div class="modal fade" id="editBookModal" tabindex="-1"><div class="modal-dialog"><div class="modal-content"><form action="/admin/edit-book/<%= book._id %>" method="POST"><div class="modal-body"><input type="text" name="name" class="form-control mb-2" value="<%= book.name %>"><input type="url" name="coverImage" class="form-control" value="<%= book.image %>"></div><div class="modal-footer"><button type="submit" class="btn btn-primary">حفظ</button></div></form></div></div></div>
<% } %>

<div class="accordion" id="sectionsAccordion">
    <% if(sections.length > 0) { %>
        <% sections.forEach((section, index) => { %>
            <div class="accordion-item mb-3 shadow-sm border rounded overflow-hidden">
                <h2 class="accordion-header" id="heading<%= section._id %>">
                    <button class="accordion-button <%= index !== 0 ? 'collapsed' : '' %> fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= section._id %>">
                        <i class="fas fa-layer-group me-2 text-primary"></i> <%= section.name %>
                    </button>
                </h2>
                <div id="collapse<%= section._id %>" class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>" data-bs-parent="#sectionsAccordion">
                    <div class="accordion-body bg-white">
                        <% if (isAdmin) { %>
                            <div class="mb-3 d-flex gap-2">
                                <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#addFileModal<%= section._id %>"><i class="fas fa-plus"></i> إضافة ملف</button>
                                <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editSectionModal<%= section._id %>"><i class="fas fa-edit"></i> تعديل الاسم</button>
                                <a href="/admin/delete-section/<%= section._id %>" class="btn btn-sm btn-danger" onclick="return confirm('هل أنت متأكد من حذف القسم وكافة محتوياته؟')"><i class="fas fa-trash"></i> حذف القسم</a>
                            </div>
                        <% } %>

                        <div class="list-group">
                            <% if(section.files.length > 0) { %>
                                <% section.files.forEach((file) => { %>
                                    <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <button class="btn btn-link text-danger p-0 me-3 heart-btn" 
                                                    onclick="addToFavorites('<%= file._id %>', '<%= file.fileName %>', '<%= file.filePath %>', '<%= file.description %>')">
                                                <i class="far fa-heart"></i>
                                            </button>
                                            <div>
                                                <div class="fw-bold text-dark"><i class="fas fa-file-alt text-muted me-2"></i><%= file.fileName %></div>
                                                <% if(file.description) { %><small class="text-muted d-block"><%= file.description %></small><% } %>
                                            </div>
                                        </div>
                                        <div class="btn-group">
                                            <a href="<%= file.filePath %>" target="_blank" class="btn btn-outline-primary btn-sm"><i class="fas fa-eye"></i> معاينة</a>
                                            <% if (isAdmin) { %>
                                                <button class="btn btn-outline-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editFileModal<%= file._id %>"><i class="fas fa-pen"></i></button>
                                                <a href="/admin/delete-file/<%= section._id %>/<%= file._id %>" class="btn btn-outline-danger btn-sm" onclick="return confirm('حذف الملف؟')"><i class="fas fa-trash"></i></a>
                                            <% } %>
                                        </div>
                                    </div>

                                    <% if (isAdmin) { %>
                                        <div class="modal fade" id="editFileModal<%= file._id %>" tabindex="-1"><div class="modal-dialog"><div class="modal-content"><form action="/admin/edit-file" method="POST"><div class="modal-body"><input type="hidden" name="sectionId" value="<%= section._id %>"><input type="hidden" name="bookId" value="<%= book._id %>"><input type="hidden" name="fileId" value="<%= file._id %>"><input type="text" name="fileName" class="form-control mb-2" value="<%= file.fileName %>"><input type="url" name="fileUrl" class="form-control mb-2" value="<%= file.filePath %>"><input type="text" name="description" class="form-control" value="<%= file.description %>"></div><div class="modal-footer"><button type="submit" class="btn btn-primary">حفظ</button></div></form></div></div></div>
                                    <% } %>
                                <% }) %>
                            <% } else { %>
                                <small class="text-muted">لا يوجد ملفات في هذا القسم.</small>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <% if (isAdmin) { %>
                <div class="modal fade" id="addFileModal<%= section._id %>" tabindex="-1"><div class="modal-dialog"><div class="modal-content"><form action="/admin/add-link" method="POST"><div class="modal-header"><h5 class="modal-title">إضافة ملف جديد</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div><div class="modal-body"><input type="hidden" name="sectionId" value="<%= section._id %>"><input type="hidden" name="bookId" value="<%= book._id %>"><input type="text" name="fileName" class="form-control mb-2" placeholder="اسم الملف" required><input type="url" name="fileUrl" class="form-control mb-2" placeholder="رابط درايف" required><input type="text" name="description" class="form-control" placeholder="وصف (اختياري)"></div><div class="modal-footer"><button type="submit" class="btn btn-success">حفظ</button></div></form></div></div></div>
                <div class="modal fade" id="editSectionModal<%= section._id %>" tabindex="-1"><div class="modal-dialog"><div class="modal-content"><form action="/admin/edit-section/<%= section._id %>" method="POST"><div class="modal-body"><input type="text" name="name" class="form-control" value="<%= section.name %>" required></div><div class="modal-footer"><button type="submit" class="btn btn-primary">حفظ</button></div></form></div></div></div>
            <% } %>
        <% }) %>
    <% } else { %>
        <div class="text-center py-5 text-muted"><h4>لا يوجد أقسام بعد.</h4></div>
    <% } %>
</div>

<div class="modal fade" id="addSectionModal" tabindex="-1"><div class="modal-dialog"><div class="modal-content"><form action="/admin/add-section" method="POST"><div class="modal-header"><h5 class="modal-title">إضافة قسم جديد</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div><div class="modal-body"><input type="hidden" name="bookId" value="<%= book._id %>"><input type="text" name="name" class="form-control" placeholder="اسم القسم (مثال: الوحدة الأولى)" required></div><div class="modal-footer"><button type="submit" class="btn btn-success">إضافة</button></div></form></div></div></div>
