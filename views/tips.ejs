<div class="text-center mb-5">
    <h2 class="fw-bold text-primary"><i class="fas fa-lightbulb text-warning"></i> نصائح وإرشادات</h2>
    <p class="text-muted">نصائح دراسية ومعلومات تهمك</p>
</div>

<% if (isAdmin) { %>
    <div class="text-center mb-4">
        <button class="btn btn-success shadow" data-bs-toggle="modal" data-bs-target="#addTipModal">
            <i class="fas fa-plus"></i> إضافة نصيحة جديدة
        </button>
    </div>
<% } %>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <% if(tips.length > 0) { %>
            <% tips.forEach(tip => { %>
                <div class="card mb-4 shadow-sm border-0 tip-card">
                    <% if(tip.image) { %>
                        <img src="<%= tip.image %>" class="card-img-top" style="max-height: 300px; object-fit: cover;" alt="Tip Image">
                    <% } %>
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <h4 class="card-title fw-bold text-dark"><%= tip.title %></h4>
                            <% if (isAdmin) { %>
                                <div>
                                    <button class="btn btn-sm btn-outline-warning" data-bs-toggle="modal" data-bs-target="#editTipModal<%= tip._id %>">
                                        <i class="fas fa-pen"></i>
                                    </button>
                                    <a href="/admin/delete-tip/<%= tip._id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('حذف؟')">
                                        <i class="fas fa-times"></i>
                                    </a>
                                </div>
                            <% } %>
                        </div>
                        <p class="card-text text-muted mt-3" style="white-space: pre-wrap;"><%= tip.content %></p>
                        <small class="text-secondary"><i class="far fa-clock"></i> <%= tip.createdAt.toLocaleDateString('ar-EG') %></small>
                    </div>
                </div>

                <% if (isAdmin) { %>
                <div class="modal fade" id="editTipModal<%= tip._id %>" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form action="/admin/edit-tip/<%= tip._id %>" method="POST">
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label>العنوان</label>
                                        <input type="text" name="title" class="form-control" value="<%= tip.title %>" required>
                                    </div>
                                    <div class="mb-3">
                                        <label>المحتوى</label>
                                        <textarea name="content" class="form-control" rows="5" required><%= tip.content %></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label>رابط صورة (اختياري)</label>
                                        <input type="url" name="image" class="form-control" value="<%= tip.image %>">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">حفظ</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>
            <% }) %>
        <% } else { %>
            <div class="alert alert-info text-center">لا يوجد نصائح حالياً.</div>
        <% } %>
    </div>
</div>

<div class="modal fade" id="addTipModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">إضافة نصيحة</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form action="/admin/add-tip" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label>العنوان</label>
                        <input type="text" name="title" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label>المحتوى</label>
                        <textarea name="content" class="form-control" rows="5" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label>رابط صورة (اختياري)</label>
                        <input type="url" name="image" class="form-control" placeholder="https://...">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">نشر</button>
                </div>
            </form>
        </div>
    </div>
</div>
